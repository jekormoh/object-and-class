class Budget:
  
    def __init__(self, category, amount):
        self.category = category
        self.amount = amount
#methods
    def deposit(self):
        return('This is a deposit method')

    def check_balance(self):
        return('This is a check and balance method')

    def withdraw(self):
        return('This is a withdrwal method')

    def transfer(self):
        return('This is a transfer method')

category = Budget('food', 1000)
category_1 = Budget('clothing', 1000)
category_2 = Budget('entertainment', 1000)

print(category.deposit())
print(category_1.check_balance())
print(category_2.withdraw())
print(category.transfer())
